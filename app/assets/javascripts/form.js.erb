        } else {

            var ans = confirm( "Hello " + $("#first_Name").val() + ", you have set a mock interview with " +
            department + " at "+ time + '\n\n' + " Is this your correct choice?" );

            if (ans == true){
                //$('#scheduler tr:eq('+xcolumn+') td:eq('+xcell+')').css('background-color','#FF0000');
